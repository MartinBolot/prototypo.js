{
  "name": "prototypo.js",
  "version": "0.1.0",
  "description": "parametric-glyph engine",
  "dependencies": {},
  "devDependencies": {
    "babelify": "^5.0.3",
    "browserify": "^7.0.0",
    "chai": "^1.10.0",
    "deptree": "~0.1.0",
    "derequire": "~1.2.0",
    "exorcist": "^0.1.6",
    "http-server": "^0.7.5",
    "live-reload": "^0.2.0",
    "mocha": "^2.1.1",
    "opener": "^1.4.0",
    "plumin.js": "^0.5.0",
    "test.ptf": "^0.1.0",
    "uglify-js": "^2.4.14",
    "watchify": "^2.1.1"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "main": "dist/prototypo.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prepublish": "npm run build && npm test",
    "build": "npm run browserify && npm run uglify",
    "browserify": "browserify src/prototypo.js --igv global --debug --standalone prototypo | derequire | exorcist dist/prototypo.js.map > dist/prototypo.js",
    "watchify": "watchify src/prototypo.js --igv global --debug --standalone prototypo -o dist/prototypo.js -v",
    "uglify": "uglifyjs dist/prototypo.js > dist/prototypo.min.js",
    "test": "mocha test/*.js",
    "debug": "node-inspector --no-preload --web-port=8081 & mocha --debug-brk -w test/*.js",

    "serve": "http-server -p 8080 .",
    "live-reload": "live-reload --port 8081 .",

    "open": "opener http://localhost:8080",

    "start": "npm run opener",
    "prestart": "npm run serve & npm run live-reload"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/byte-foundry/prototypo.js.git"
  },
  "author": "@louis_remi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/byte-foundry/prototypo-core/issues"
  },
  "browserify": {
    "noParse": [
      "node_modules/plumins.js/dist/plumin.js"
    ]
  }
}
