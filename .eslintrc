{
	"env": {
		"browser": true,
		"node": true,
		"amd": true,
		"mocha": true
	},
	"ecmaFeatures": {
		"jsx": true,
		"arrowFunctions": true,
		"blockBindings": true,
		"classes": true,
		"defaultParams": true,
		"destructuring": true,
		"forOf": true,
		"generators": true,
		"modules": true,
		"templateStrings": true,
		"objectLiteralComputedProperties": true,
		"objectLiteralShorthandMethods": true,
		"objectLiteralShorthandProperties": true
	},
	"plugins": [
		"mocha"
	],
	"rules": {
		"quotes": "single",
		"no-underscore-dangle": false,
		"mocha/no-exclusive-tests": 2
	}
}
